<?xml version="1.0" encoding="utf-8"?>
<odoo>


<!-- Translatable template -->
 
<template id="invoice_sum_report">
            <t t-call="web.external_layout">
<!--               <t t-call="web.basic_layout">-->
                <t t-set="o" t-value="move.with_context({'lang': lang})"/>
                <t t-set="address">
                    <address t-field="move.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    <div t-if="move.partner_id.vat" class="mt16"><t
                            t-esc="move.company_id.country_id.vat_label or 'Tax ID'"/>
                        :
                        <span t-field="move.partner_id.vat"/>
                    </div>
                </t>
                <div class="page">
                    <h2>
                        <span t-if="move.type == 'out_invoice' and move.state in ('open', 'in_payment', 'paid')">
                            Invoice
                        </span>
                        <span t-if="move.type == 'out_invoice' and move.state == 'draft'">
                            Invoice
                        </span>
                        <span t-if="move.type == 'out_invoice' and move.state == 'cancel'">
                            Cancelled Invoice
                        </span>
                        <span t-if="move.type == 'out_refund'">Credit Note</span>
                        <span t-if="move.type == 'in_refund'">Vendor Credit Note
                        </span>
                        <span t-if="move.type == 'in_invoice'">Vendor Bill</span>

                        <span t-if="move.type == 'out_invoice' and move.state == 'draft'"
                              t-field="move.draft_number"/>
                    </h2>

                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" t-if="move.name"
                             name="description">
                            <strong>Description:</strong>
                            <p class="m-0" t-field="move.name"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="move.invoice_date"
                             name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="move.invoice_date"/>
                        </div>
                        <div class="col-auto mw-100 mb-2"
                             t-if="move.invoice_date_due and move.type == 'out_invoice' and move.state in ('open', 'in_payment', 'paid')"
                             name="due_date">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="move.invoice_date_due"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="move.invoice_origin"
                             name="invoice_origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="move.invoice_origin"/>
                        </div>
                        <div class="col-auto mw-100 mb-2"
                             t-if="move.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="move.partner_id.ref"/>
                        </div>
                        <div name="ref" class="col-auto mw-100 mb-2"
                             t-if="move.ref">
                            <strong>ref:</strong>
                            <p class="m-0" t-field="move.ref"/>
                        </div>
                    </div>

                    <t t-set="display_discount"
                       t-value="any([l.discount for l in move.invoice_line_ids])"/>

                   <table align="right" class="table table-bordered">
                      <thead>
						<tr style="color:blue">
						    <th>seq</th>
							<th>Product</th>
							<th>Quantity</th>
							<th>Unit Price</th>
							<th>Taxes</th>
							<th>Total</th>


						  </tr>
						  </thead>


                   <tbody>
						  <t t-foreach="docs" t-as="o">
                          <tr>
						    <td >
														<span t-esc="j"/>
													</td>
						      <td >
														<t t-esc="o['product_id'].name"/>
													</td>
													 <td>
														<t t-esc="o['quantity']"/>
													</td>
							  <td>
														<t t-esc="o['price_unit']"/>
													</td>
							  <td>
														<t t-esc="o['tax_ids'].name"/>
													</td>
							  <td>
														<t t-esc="o['price_total']"/>
													</td>

						  </tr>

						  </t>
						  </tbody>
				   </table>


                </div>
            </t>
        </template>

        

	
        
</odoo>